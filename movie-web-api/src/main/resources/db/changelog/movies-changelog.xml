<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create-movie" author="marek">
        <createTable tableName="movie">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="titles" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="path_to_movie" type="longvarchar"  />

        </createTable>

        <createTable tableName="category">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="parent_category_id" type="bigint">
                <constraints unique="true"  />
            </column>
        </createTable>

        <createTable tableName="category_movies">
            <column name="category_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="movie_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="category" baseColumnNames="parent_category_id" constraintName="fk_category_category"
                                 referencedTableName="category"
                                 referencedColumnNames="id" />
        <addForeignKeyConstraint baseTableName="category_movies" baseColumnNames="movie_id" constraintName="fk_category_movies_movie" referencedTableName="movie"
                                 referencedColumnNames="id" />
        <addForeignKeyConstraint baseTableName="category_movies" baseColumnNames="category_id" constraintName="fk_category_movies_category" referencedTableName="category"
                                 referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>